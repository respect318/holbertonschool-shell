#!/usr/bin/env bash
# This script stops '4-to_infinity_and_beyond' process without using kill or killall

pid=$(pgrep -f "4-to_infinity_and_beyond")

# If the process is running, terminate it by sending a signal
if [ -n "$pid" ]; then
    # Using pkill as an alternative to kill/killall
    pkill -f "4-to_infinity_and_beyond"
fiy
