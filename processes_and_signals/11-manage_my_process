#!/usr/bin/env bash
# Init script to manage the manage_my_process daemon

PID_FILE="/var/run/my_process.pid"

case "$1" in
    start)
        # Start the process and create PID file
        /tmp/manage_my_process &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        # Stop the process and remove PID file
        if [ -f "$PID_FILE" ]; then
            kill "$(cat "$PID_FILE")"
            rm "$PID_FILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        # Restart by calling stop then start
        $0 stop
        sleep 1
        $0 start
        echo "manage_my_process restarted"
        ;;
    *)
        # Show usage if no or invalid argument
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
