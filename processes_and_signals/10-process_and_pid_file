#!/usr/bin/env bash
# Script that handles PID file, signals, and displays messages accordingly

PID_FILE="/var/run/myscript.pid"
echo $$ > "$PID_FILE"

# SIGTERM: kill (default)
handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGINT: Ctrl+C
handle_sigint() {
    echo "Y U no love me?!"
}

# SIGQUIT: kill -QUIT
handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

# Signal trapping
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap handle_sigquit SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
