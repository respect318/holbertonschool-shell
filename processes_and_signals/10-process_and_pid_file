#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, loops with a message,
# and handles termination signals gracefully.

PID_FILE="/var/run/myscript.pid"
echo $$ > "$PID_FILE"

# Handle SIGTERM (default kill)
handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Handle SIGINT (Ctrl+C)
handle_sigint() {
    echo "Y U no love me?!"
}

# Handle SIGQUIT (kill -QUIT)
handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

# Set traps
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap handle_sigquit SIGQUIT

# Loop forever
while true; do
    echo "To infinity and beyond"
    sleep 1
done
