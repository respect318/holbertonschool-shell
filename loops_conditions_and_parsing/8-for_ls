#!/usr/bin/env bash
# This script lists the content of the current directory and displays only the part of the name after the first dash.
# It excludes hidden files.

for file in *-*  # Match files and directories that contain a dash
do
  # Exclude hidden files and directories
  if [[ ! "$file" =~ ^\..* ]]; then
    # Display only the part of the name after the first dash
    echo "${file#*-}"
  fi
done
