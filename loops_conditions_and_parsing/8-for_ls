#!/usr/bin/env bash
# This script lists files from the current directory, excluding hidden files.
# It displays only the part of the name after the first dash.

# Check if any file or folder contains a dash
found=false

# Iterate over all files and directories in the current directory
for file in *; do
  # Check if the file contains a dash and is not hidden
  if [[ "$file" == *-* && ! "$file" =~ ^\..* ]]; then
    # If the file contains a dash, print the part after the first dash
    echo "${file#*-}"
    found=true
  fi
done

# If no files with dashes are found, output "empty folder"
if ! $found; then
  echo "empty folder"
fi
