#!/usr/bin/env bash
# Displays /etc/passwd info in story format without loops

awk -F: '{
    print "The user " $1 " is part of the " $4 " gang, lives in " $6 " and rides " $7 "."
    print $1 "\047s place is protected by the passcode " $2 ", more info about the user here: " $5
    print ""
}' /etc/passwd
