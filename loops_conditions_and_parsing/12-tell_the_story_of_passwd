#!/usr/bin/env bash
# Alternative bulletproof version

while IFS=: read -r username password uid gid info home shell || [ -n "$username" ]; do
    printf "The user %s is part of the %s gang, lives in %s and rides %s.\n" \
           "$username" "$gid" "$home" "$shell"
    printf "%s's place is protected by the passcode %s, more info about the user here: %s\n\n" \
           "$username" "$password" "$info"
done < /etc/passwd
